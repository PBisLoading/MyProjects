<body>
    <div class="container">
        <h1>üê± Cozy Study Space üè°</h1>
        
        <h2>‚è≥ Study Timer</h2>
        <div class="timer" id="timer">25:00</div>
        <button onclick="startTimer()">Start</button>
        <button onclick="resetTimer()">Reset</button>
        
        <h2>üéµ Jukebox</h2>
        <div class="jukebox">
            <button onclick="playMusic()">Play</button>
            <button onclick="pauseMusic()">Pause</button>
        </div>
        <audio id="music" src="https://www.bensound.com/bensound-music/bensound-buddy.mp3"></audio>
    </div>
    
    <script>
        let timeLeft = 1500;
        let timer;
        function startTimer() {
            if (!timer) {
                timer = setInterval(() => {
                    if (timeLeft > 0) {
                        timeLeft--;
                        document.getElementById('timer').innerText = `${Math.floor(timeLeft / 60)}:${(timeLeft % 60).toString().padStart(2, '0')}`;
                    } else {
                        clearInterval(timer);
                        timer = null;
                    }
                }, 1000);
            }
        }
        function resetTimer() {
            clearInterval(timer);
            timer = null;
            timeLeft = 1500;
            document.getElementById('timer').innerText = "25:00";
        }
        function playMusic() {
            document.getElementById('music').play();
        }
        function pauseMusic() {
            document.getElementById('music').pause();
        }
    </script>
</body>
